<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gugugou.provider.commodity.dao.ItemPathDao">
    <resultMap id="BaseResultMap" type="com.gugugou.provider.commodity.model.ItemPathModel">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="item_id" property="itemId" jdbcType="BIGINT"/>
        <result column="path_id" property="pathId" jdbcType="BIGINT"/>
        <result column="created_by" property="createdBy" jdbcType="VARCHAR"/>
        <result column="created_time" property="createdTime" jdbcType="TIMESTAMP"/>
        <result column="updated_by" property="updatedBy" jdbcType="VARCHAR"/>
        <result column="updated_time" property="updatedTime" jdbcType="TIMESTAMP"/>
        <result column="removed" property="removed" jdbcType="INTEGER"/>
    </resultMap>
    <resultMap id="Item" type="com.gugugou.provider.commodity.dto.response.ItemResponse">
        <result column="brand_id" property="brandId" jdbcType="BIGINT"/>
    </resultMap>
<!--新增商品关系表-->
    <insert id="insertItemPath" useGeneratedKeys="true" keyProperty="id">
        insert into item_path
        (id, item_id, path_id, created_by, created_time, updated_by, updated_time, removed)
        values
        (#{id}, #{itemId}, #{pathId}, #{createdBy}, #{createdTime}, #{updatedBy}, #{updatedTime}, #{removed})
    </insert>

<!--查询单条商品对应的品牌id-->
    <select id="selectItemBrandIdById" parameterType="long" resultMap="Item">
        select brand_id
        from parana-item.parana_item.brand_id
        where id = #{id};
    </select>
</mapper>